    private List<Item> items = new List<Item>();

    [Inject]
    public IToDoClient ToDoClient { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        var res = await ToDoClient.GetAsync();
        if (res is not null)
            items = res.ToList();
    }

